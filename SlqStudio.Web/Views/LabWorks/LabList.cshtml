@model IEnumerable<SlqStudio.Persistence.Models.LabWork>

<div class="container">
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Название</th>
            <th>Описание</th>
            <th>Номер</th>
            <th>Курс</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var lab in Model)
        {
            <tr onclick="window.location.href='@Url.Action("DetailsByWork", "LabTasks", new { id = lab.Id })'" style="cursor:pointer;">
                <td>@lab.Name</td>
                <td>@lab.Description</td>
                <td>@lab.Number</td>
                <td>@lab.Course?.Name</td>
            </tr>
        }
        </tbody>
    </table>
</div>