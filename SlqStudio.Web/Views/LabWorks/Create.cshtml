@model SlqStudio.Application.CQRS.LabWork.Commands.CreateLabWorkCommand
<div class="container">
    <h2>Create Lab Work</h2>
    <form asp-action="Create" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Description"></label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Number"></label>
            <input asp-for="Number" class="form-control" />
            <span asp-validation-for="Number" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Course</label>
            @Html.DropDownList("CourseId", (SelectList)ViewBag.Courses, "Select Course", new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary mt-3">Create</button>
        <a class="btn btn-secondary mt-3" href="@Url.Action("Index")">Cancel</a>
    </form>
</div>