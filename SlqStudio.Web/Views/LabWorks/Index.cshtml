@model IEnumerable<SlqStudio.Persistence.Models.LabWork>

<div class="container">
    <h2>Lab Works</h2>
    <a class="btn btn-primary mb-3" href="@Url.Action("Create")">Create New Lab Work</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Number</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var lab in Model)
        {
            <tr>
                <td>@lab.Name</td>
                <td>@lab.Description</td>
                <td>@lab.Number</td>
                <td>@lab.Course?.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = lab.Id })">Details</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = lab.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = lab.Id })">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>