@model SlqStudio.Persistence.Models.LabWork
<div class="container">
    <h2>Delete Lab Work</h2>
    <p>Are you sure you want to delete this lab work?</p>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Model.Number</dd>
        <dt class="col-sm-2">Course</dt>
        <dd class="col-sm-10">@Model.Course?.Name</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </form>
</div>