@model IEnumerable<SlqStudio.Persistence.Models.LabTask> 
<div class="container">
    <h2>Lab Tasks</h2>
    <a class="btn btn-primary mb-3" href="@Url.Action("Create")">Create New Lab Task</a>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>Number</th>
            <th>Title</th>
            <th>Lab Work</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Number</td>
                <td>@task.Title</td>
                <td>@task.LabWork?.Name</td>
                <td>
                    <a class="btn btn-info btn-sm" href="@Url.Action("Details", new { id = task.Id })">Details</a>
                    <a class="btn btn-warning btn-sm" href="@Url.Action("Edit", new { id = task.Id })">Edit</a>
                    <a class="btn btn-danger btn-sm" href="@Url.Action("Delete", new { id = task.Id })">Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>