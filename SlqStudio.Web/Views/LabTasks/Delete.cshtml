@model SlqStudio.Persistence.Models.LabTask
<div class="container">
    <h2>Delete Lab Task</h2>
    <p>Are you sure you want to delete this lab task?</p>
    <dl class="row">
        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Model.Number</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Lab Work</dt>
        <dd class="col-sm-10">@Model.LabWork?.Name</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a class="btn btn-secondary" href="@Url.Action("Index")">Cancel</a>
    </form>
</div>
