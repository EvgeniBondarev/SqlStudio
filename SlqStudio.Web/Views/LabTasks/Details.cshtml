@model SlqStudio.Persistence.Models.LabTask
<div class="container">
    <h2>Lab Task Details</h2>
    <dl class="row">
        <dt class="col-sm-2">Number</dt>
        <dd class="col-sm-10">@Model.Number</dd>
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Condition</dt>
        <dd class="col-sm-10">@Model.Condition</dd>
        <dt class="col-sm-2">Solution Example</dt>
        <dd class="col-sm-10">@Model.SolutionExample</dd>
        <dt class="col-sm-2">Lab Work</dt>
        <dd class="col-sm-10">@Model.LabWork?.Name</dd>
    </dl>
    <a class="btn btn-primary" href="@Url.Action("Edit", new { id = Model.Id })">Edit</a>
    <a class="btn btn-secondary" href="@Url.Action("Index")">Back to List</a>
</div>
